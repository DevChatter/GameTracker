@page
@using System.Linq
@model DevChatter.GameTracker.Pages.GameReviews.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>GameReview</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GameReviewViewModel.Rating" class="control-label"></label>
                <input asp-for="GameReviewViewModel.Rating" class="form-control" />
                <span asp-validation-for="GameReviewViewModel.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameReviewViewModel.ReviewText" class="control-label"></label>
                <input asp-for="GameReviewViewModel.ReviewText" class="form-control" />
                <span asp-validation-for="GameReviewViewModel.ReviewText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameReviewViewModel.GameId" class="control-label"></label>
                <select asp-items="Model.Games.Select(x => new SelectListItem(x.Title, x.Id.ToString()))"></select>
                <span asp-validation-for="GameReviewViewModel.GameId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
